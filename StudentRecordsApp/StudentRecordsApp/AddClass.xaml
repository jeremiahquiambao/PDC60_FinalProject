<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StudentRecordsApp.AddClass">
    <ContentPage.Content>
        <StackLayout Padding="20">
            <Label Text="Add Course" FontSize="Title" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand"/>

            <!-- Entry for Class Name -->
            <Entry x:Name="ClassNameEntry" Placeholder="Class Course" Margin="0,10,0,10"/>

            <!-- Entry for Class ID (if needed) -->
            <!--<Entry x:Name="ClassIdEntry" Placeholder="Class ID" Margin="0,10,0,10"/>-->

            <!-- Button to Add Class -->
            <Button Text="Add Course" Clicked="OnAddClassClicked" HorizontalOptions="FillAndExpand" Margin="0,20,0,0"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>