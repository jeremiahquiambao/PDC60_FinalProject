<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StudentRecordsApp.AddHistory">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Add Academic History" FontAttributes="Bold" HorizontalOptions="CenterAndExpand" Margin="0,10,0,20"/>

            <Label Text="School" />
            <Entry x:Name="SchoolEntry" />

            <Label Text="Academic Year" />
            <Entry x:Name="AcademicYearEntry" />

            <Label Text="Year Level" />
            <Entry x:Name="YearLevelEntry" />

            <Button Text="Add Academic History" Clicked="OnAddAcademicHistoryClicked" HorizontalOptions="CenterAndExpand" Margin="0,20,0,0"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>